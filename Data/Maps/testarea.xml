<World AutoAdjustBrightness="false">
  <StartSector Value="Room1"/>
  <StartPoint Value="0,0,0"/>
  <StartFacing Value="1,0,0"/>
  
  <Material id="TexturedWall" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="1.0, 1.0, 1.0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  <Material id="Cieling" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="0.2, 0.2, 0.2" NormalTexture="Art/simplenormal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  <Material id="Floor" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="1.0, 1.0, 1.0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>

  <Material id="RedLight" EmissiveColor="1,0,0" DiffuseColor="0,0,0" SpecularColor="0,0,0"/>
  <Material id="GreenLight" EmissiveColor="0,1,0" DiffuseColor="0,0,0" SpecularColor="0,0,0"/>
  <Material id="WhiteLight" EmissiveColor="1,1,1" DiffuseColor="0,0,0" SpecularColor="0,0,0"/>

  <Material id="Glass" DiffuseColor="0,0,0" SpecularColor="1,0.5,0.8" SpecularPower="40" RefractionIndex="0.5" RefractionAmount="1"/>
  <Material id="FrostedGlass" DiffuseColor="0,0,0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.4,0.4,0.4" SpecularPower="40" RefractionIndex="0.85" RefractionAmount="1"/>
  <Material id="BumpyGlass" DiffuseColor="0,0,0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.4,0.4,0.4" SpecularPower="40" RefractionIndex="0.95" RefractionAmount="1"/>
  <Material id="Mirror" DiffuseColor="0,0,0" SpecularColor="0.3,0.3,0.3" SpecularPower="400" ReflectionAmount="1.0"/>
  <Material id="BumpyMirror" DiffuseColor="0,0,0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.3,0.3,0.3" SpecularPower="400" ReflectionAmount="1.0"/>

  <!--===============================================================
  ROOM1
  ================================================================-->
  <Sector id="Room1" Dimensions="40,10,20" CastShadows="false" AmbientLight="0.5, 0.5, 0.5">
    <PointLight Position="4, 2, 0" Color="1,1,1" AttenuationConstant="0.5" AttenuationDistanceSquared="0.02"/>
    <Sphere Position="4,2,0" Radius="0.1" Material="WhiteLight" CastShadows="false"/>

    <Sphere Position="-8,-3,3" Radius="2" Material="Glass" TextureScale="0.5,0.5" CastShadows="true"/>
    <Sphere Position="8,-3,3" Radius="2" Material="BumpyMirror" TextureScale="0.5,0.5" CastShadows="true"/>
    <Sphere Position="8,-3,-3" Radius="2" Material="Mirror" TextureScale="0.5,0.5" CastShadows="true"/>

    <Box Position="16,-3,0" Scale="3,1,1" Material="FrostedGlass" TextureScale="0.25,0.25" CastShadows="true"/>
    <Box Position="14,-1,4" Scale="1,3,1" Material="Glass" TextureScale="0.25,0.25" CastShadows="true"/>
    <Box Position="13,-2,-5" Scale="1,1,3" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="true"/>

    <Plane Normal="-1,0.3,0.2" UAxis="0,0,1" Dimensions="-3,-1,-1,1" D="-3" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="1"/>
    <Plane Normal="-1,0.7,0.1" UAxis="0,0,1" Dimensions="1,-1,3,1" D="-5" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="1"/>
    <Plane Normal="-1,-0.1,-0.7" UAxis="0,0,1" Dimensions="-1,2,1,4" D="-2.5" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="1"/>

    <SectorPlane UAxis="0,0,-1" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="BigRoom" ConnectToSectorPlane="1" ConnectToSectorOffset="0,-2," PortalWindow="-2,-3,2,5"/>
    <SectorPlane UAxis="0,0, 1" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="Hallway" ConnectToSectorPlane="0"/>

    <SectorPlane UAxis=" 1,0,0" Material="Floor" TextureScale="0.25,0.25"/>
    <SectorPlane UAxis="-1,0,0" Material="Floor" TextureScale="0.25,0.25"/>

    <SectorPlane UAxis=" 1,0,0" Material="Cieling" TextureScale="0.25,0.25"/>
    <SectorPlane UAxis="-1,0,0" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="BigRoom" ConnectToSectorPlane="4" ConnectToSectorOffset="0,1" PortalWindow="-5,-5,5,4"/>
  </Sector>

  <!--===============================================================
  HALLWAY
  ================================================================-->
  <Sector id="Hallway" Dimensions="10,8,10" CastShadows="false" AmbientLight="0.5, 0.5, 0.5">
    <PointLight Position="2, 0, 0" Color="1,0.2,0.2" AttenuationConstant="0.5" AttenuationDistanceSquared="0.02"/>
    <Sphere Position="2,0,0" Radius="0.1" Material="RedLight" CastShadows="false"/>

    <PointLight Position="-2, 0, 0" Color="0.2,1,0.2" AttenuationConstant="0.5" AttenuationDistanceSquared="0.02"/>
    <Sphere Position="-2,0,0" Radius="0.1" Material="GreenLight" CastShadows="false"/>

    <Plane Normal="-1,0.3,0.2" UAxis="0,0,1" Dimensions="-5,-1,-3,1" D="0" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="1"/>
    <Plane Normal="-1,0.3,0.2" UAxis="0,0,1" Dimensions="2,-1,4,1" D="0" Material="TexturedWall" TextureScale="0.25,0.25" CastShadows="1"/>

    <SectorPlane UAxis="0,0,-1" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="Room1" ConnectToSectorPlane="1"/>
    <SectorPlane UAxis="0,0, 1" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="BigRoom" ConnectToSectorPlane="0" ConnectToSectorOffset="0,-2"/>

    <SectorPlane UAxis=" 1,0,0" Material="Floor" TextureScale="0.25,0.25"/>
    <SectorPlane UAxis="-1,0,0" Material="Floor" TextureScale="0.25,0.25"/>

    <SectorPlane UAxis=" 1,0,0" Material="Cieling" TextureScale="0.25,0.25"/>
    <SectorPlane UAxis="-1,0,0" Material="Cieling" TextureScale="0.25,0.25"/>
  </Sector>

  <!--===============================================================
  BIGROOM
  ================================================================-->
  <Sector id="BigRoom" Dimensions="20,10,20" CastShadows="false" AmbientLight="0.5, 0.5, 0.5">
    <PointLight Position="9,4,-5" Color="1,1,1" AttenuationConstant="0.5" ConeDirection="-9,-4,5" ConeAngle="90" ConeAttenuationAngle="20" ConeFalloffFactor="1"/>
    <Sphere Position="9,4,-5" Radius="0.1" Material="WhiteLight" CastShadows="false"/>

    <!--PointLight Position="-6, 3, 4" Color="1,1,0" AttenuationConstant="0.5" ConeDirection="6,-3,-4" ConeAngle="90" ConeAttenuationAngle="10" ConeFalloffFactor="1"/>
    <Sphere Position="-6,3,4" Radius="0.1" Material="WhiteLight" CastShadows="false"/-->

    <Box Position="0,0,0" Scale="1.5,9.9,1.5" Material="BumpyGlass" TextureScale="0.25,0.25" CastShadows="true"/>
    <Box Position="3,0,2" Scale="1.5,9.9,1.5" Material="FrostedGlass" TextureScale="0.25,0.25" CastShadows="true"/>
    <Box Position="-3,0,-2" Scale="1.5,9.9,1.5" Material="Glass" TextureScale="0.25,0.25" CastShadows="true"/>

    <SectorPlane UAxis="0,0,-1" Material="Cieling" TextureScale="0.25,0.25" ConnectToSector="Hallway" ConnectToSectorPlane="1" ConnectToSectorOffset="0,2"/>
    <SectorPlane UAxis="0,0, 1" Material="Cieling" TextureScale="0.25,0.25" PortalWindow="-2,-1000,2,1000" ConnectToSector="Room1" ConnectToSectorPlane="0" ConnectToSectorOffset="0,2"/>

    <SectorPlane UAxis=" 1,0,0" Material="Floor" TextureScale="0.25,0.25"/>
    <SectorPlane UAxis="-1,0,0" Material="Floor" TextureScale="0.25,0.25"/>

    <SectorPlane UAxis=" 1,0,0" Material="Cieling" TextureScale="0.25,0.25" PortalWindow="-5,-1000,5,1000" ConnectToSector="Room1" ConnectToSectorPlane="5" ConnectToSectorOffset="0,-1"/>
    <SectorPlane UAxis="-1,0,0" Material="Cieling" TextureScale="0.25,0.25"/>
  </Sector>

</World>
