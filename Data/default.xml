  <PointLight Position="20, 3, -20" Color="1, 0.75, 1"/>

  <Material id="Light" DiffuseColor="0, 0, 0" SpecularColor="0, 0, 0" SpecularPower="28" EmissiveColor="1, 1, 0.9" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  
  
  <Material id="TexturedWall" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="1.0, 1.0, 1.0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
