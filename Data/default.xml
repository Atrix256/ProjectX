<World>
  <StartPoint Value="0,0,0"/>
  <StartFacing Value="0"/>
  
  <AmbientLight Value="0.01, 0.01, 0.01"/>

  <PointLight Position="-22, 3, 20" Color="0.75, 1, 1"/>
  <PointLight Position="4, 3, 0" Color="1, 1, 0.75"/>
  <PointLight Position="20, 3, -20" Color="1, 0.75, 1"/>

  <Material id="Light" DiffuseColor="0, 0, 0" SpecularColor="0, 0, 0" SpecularPower="28" EmissiveColor="1, 1, 0.9" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  
  
  <Material id="TexturedWall" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="1.0, 1.0, 1.0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  <Material id="Cieling" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="0.2, 0.2, 0.2" NormalTexture="Art/simplenormal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>
  <Material id="Floor" DiffuseTexture="Art/oildrum_Diffuse.png" DiffuseColor="1.0, 1.0, 1.0" NormalTexture="Art/oildrum_Normal.png" SpecularColor="0.25, 0.25, 0.25" SpecularPower="50" EmissiveColor="0, 0, 0" ReflectionAmount="0" RefractionIndex="1" RefractionAmount="0"/>

  <Sector CastShadows="false" id="Room1">
    <Plane Normal="0, 1, 0" D="0" UAxis="1,0,0" Material="Floor" TextureScale="0.25,0.25"/>
    <Plane Normal="0, -1, 0" D="10" UAxis="1,0,0" Material="Floor" TextureScale="0.25,0.25"/>

    <Plane Normal="1, 0, 0" D="20" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>
    <Plane Normal="-1, 0, 0" D="20" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>

    <Plane Normal="0, 0, 1" D="10" UAxis="1,0,0" Material="Cieling" TextureScale="0.25,0.25" PortalNextSector="Hallway" PortalWindow="-2, -4, 2, 0"/>
    <Plane Normal="0, 0, -1" D="10" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>
  </Sector>

  <Sector CastShadows="false" id="Hallway">
    <Plane Normal="0, 1, 0" D="0" UAxis="1,0,0" Material="Floor" TextureScale="0.25,0.25"/>
    <Plane Normal="0, -1, 0" D="4" UAxis="1,0,0" Material="Floor" TextureScale="0.25,0.25"/>

    <Plane Normal="1, 0, 0" D="2" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>
    <Plane Normal="-1, 0, 0" D="2" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>

    <Plane Normal="0, 0, 1" D="30" UAxis="0,1,0" Material="Cieling" TextureScale="0.25,0.25"/>
    <Plane Normal="0, 0, -1" D="-10" UAxis="-1,0,0" Material="Cieling" TextureScale="0.25,0.25" PortalNextSector="Room1"/>
</Sector>
  
  <!--spheres to show where the point lights are.  they dont cast shadows and have emissive colored materials-->
  <Sphere Position="-22, 3, 20" Radius="0.1" Material="Light" CastShadows="0"/>
  <Sphere Position="4, 3, 0" Radius="0.1" Material="Light" CastShadows="0"/>
  <Sphere Position="20, 3, -20" Radius="0.1" Material="Light" CastShadows="0"/>

</World>
